@model UserManagement.Models.ApplicationUser
@using Mvc.JQuery.Datatables.TagHelpers
@using UserManagement.Models
@{
    ViewBag.Title = "Users";
}

<table id="Users" class="table datatables table-striped table-bordered" cellspacing="0" width="100%" role="grid" style="width: 100%;"
       asp-datatables-edit="/User/Edit/"
       asp-datatables-create="/User/Create/"
       asp-datatables-edit-row-select="true"
       asp-datatables-delete="/User/Delete/"
       asp-datatables-create-button="true"
       asp-datatables-language='getLanguage'
       asp-datatables-lengthmenu='getLengthMenu'
       asp-datatables-url="/User/Index"
       data-dom='<"row"<"col-sm-6"T>r<"col-sm-6>"f>><"row"t><"row"<"col-sm-4"l><"col-sm-4"i><"col-sm-4"p>>'
       asp-datatables-savestate="true">
    <thead>
        <tr>
            <th asp-datatables-data="Email" asp-datatables-render="createMailToLink"></th>
            <th asp-datatables-data="EmailConfirmed"></th>
            <th asp-datatables-data="LockoutEnd" asp-datatables-render="formatDate" data-mvc6-arg="yyyy-mm-dd hh:mm"></th>
            <th asp-datatables-data="TwoFactorEnabled" asp-datatables-orderable="false"></th>
            <th asp-datatables-data="UserName" asp-datatables-searchable="true"> </th>
            <th asp-datatables-data="Logins" asp-datatables-orderable="false" asp-datatables-searchable="false" asp-datatables-render="[, ].LoginProvider"> </th>
            <th asp-datatables-data="Roles" asp-datatables-orderable="false" asp-datatables-searchable="false" asp-datatables-render="[, ].Name"> </th>
            <th data-data="Email" asp-datatables-orderable="false" asp-datatables-render="editDeleteButton">edit/delete</th>
        </tr>
    </thead>
</table>

<div id="ajaxForm" class="modal fade" role="dialog"></div>

<div id="confirm" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header"></div>
            <div class="modal-body">
                Wilt u de wijzigingen opslaan!!
            </div>
            <div class="modal-footer">
                <button type="button" name="no" class="btn btn-primary">Nee</button>
                <button type="submit" name="yes" class="btn btn-primary">Ja</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
<script type="text/javascript"></script>
